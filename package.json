{
  "name": "revalidate",
  "version": "0.1.0",
  "description": "Composable form value validations",
  "main": "lib/index.js",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "build": "babel src --out-dir lib",
    "clean": "rm -rf lib",
    "dev": "nodemon --exec 'clear; npm test' -w src -w test",
    "lint": "eslint {src,test}",
    "prepublish": "npm run clean && npm run build",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfairbank/revalidate.git"
  },
  "keywords": [
    "functional",
    "validation",
    "validate",
    "form"
  ],
  "author": "Jeremy Fairbank <elpapapollo@gmail.com> (http://jeremyfairbank.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jfairbank/revalidate/issues"
  },
  "homepage": "https://github.com/jfairbank/revalidate#readme",
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "eslint": "^2.10.2",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-import-resolver-node": "^0.2.0",
    "eslint-plugin-import": "^1.8.0",
    "lodash.range": "^3.1.5",
    "lodash.repeat": "^4.0.3",
    "nodemon": "^1.9.2"
  },
  "dependencies": {
    "babel-runtime": "^6.9.0",
    "invariant": "^2.2.1",
    "lodash.findindex": "^4.4.0",
    "lodash.isplainobject": "^4.0.4",
    "lodash.omit": "^4.3.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread",
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb-base",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "settings": {
      "import/resolver": "node"
    },
    "rules": {
      "consistent-return": 0,
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-rest-params": 0
    }
  },
  "ava": {
    "require": "babel-core/register"
  }
}
